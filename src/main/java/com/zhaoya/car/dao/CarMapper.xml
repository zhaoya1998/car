<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhaoya.car.dao.CarMapper">

	<resultMap type="com.zhaoya.car.domain.Car" id="BaseResultMap">
		<id column="id" property="id" jdbcType="INTEGER" />
    	<result column="name" property="name" jdbcType="VARCHAR" />
    	<result column="trademark" property="trademark" jdbcType="VARCHAR" />
    	<result column="rent" property="rent" jdbcType="DECIMAL" />
    	<result column="car_type" property="carType" jdbcType="VARCHAR" />
    	<result column="pic_url" property="picUrl" jdbcType="VARCHAR" />
    	<result column="created" property="created" jdbcType="TIMESTAMP" />
	</resultMap>
	<!-- 查询车辆表-->
	<select id="selectCarsByCode" resultMap="BaseResultMap">
		select * from t_car where car_type in 
		<foreach collection="array" open="(" item="code" close=")" separator=",">
			#{code}
		</foreach>
	</select>
	<!-- 查询车辆表-->
	<select id="selects" resultMap="BaseResultMap">
		select * from t_car
	</select>
	<!-- 查询准驾车型表-->
	<select id="selectTypes" resultType="driverType">
		select * from t_driver_type
	</select>
	<!-- 添加汽车 -->
	<insert id="insert" parameterType="com.zhaoya.car.domain.Car" >
		insert into t_car
		<trim prefix="(" suffix=")" suffixOverrides="," >
			<if test="id != null" >
				id,
			</if>
			<if test="name != null" >
				name,
			</if>
			<if test="trademark != null" >
				trademark,
			</if>
			<if test="rent != null" >
				rent,
			</if>
			<if test="carType != null" >
				car_type,
			</if>
			<if test="picUrl != null" >
				pic_url,
			</if>
			<if test="created != null" >
				created,
			</if>
		</trim>
		<trim prefix="values (" suffix=")" suffixOverrides="," >
			<if test="id != null" >
				#{id,jdbcType=INTEGER},
			</if>
			<if test="name != null" >
				#{name,jdbcType=VARCHAR},
			</if>
			<if test="trademark != null" >
				#{trademark,jdbcType=INTEGER},
			</if>
			<if test="rent != null" >
				#{rent,jdbcType=DECIMAL},
			</if>
			<if test="carType != null" >
				#{carType,jdbcType=VARCHAR},
			</if>
			<if test="picUrl != null" >
				#{picUrl,jdbcType=VARCHAR},
			</if>
			<if test="created != null" >
				#{created,jdbcType=TIMESTAMP},
			</if>
		</trim>
	</insert>
	
</mapper>